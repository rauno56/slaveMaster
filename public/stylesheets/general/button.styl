a.button {
	display:inline-block;
	min-width: 100px;
	margin: 0px 5px;
	padding: 3px 10px;
	text-align: center;
	border: 1px solid hsla(0, 0%, 50%, 0.5);
	border-radius(5px);
	background-color: transparent;
	color: hsl(0, 0%, 15%);
	
	text-decoration: none;
	box-shadow(inset 0px 0px 1px 1px hsla(119, 20%, 58%, 0.5))
	
/* 	text-shadow: -1px -1px 0px hsl(120, 10%, 25%); */
/* 	background-image: linear-gradient(top, 0% hsl(119, 23%, 52%)); */
}
	
a.button:hover {
	box-shadow(inset 0px 0px 10px 1px hsla(119, 20%, 58%, 0.5));
}
a.button:active {
	position:relative;
	top:1px;
}